<h1>Listing programs</h1>

<table class="table">
  <tr>
    <th>Name</th>
    <th>Institution</th>
    <th>Graduating salary</th>
    <th>Edit</th>
    <th>Destroy</th>
  </tr>

<% @programs.each do |program| %>
  <tr>
    <td><%= link_to program.name, program %></td>
    <td><%= link_to program.institution.name, program.institution %></td>
    <td>$<%= number_with_delimiter(program.graduating_salary, :delimiter => ',') %></td>
    <td><%= link_to 'Edit', edit_program_path(program) %></td>
    <td><%= link_to 'Destroy', program, method: :delete, data: { confirm: 'Are you sure?' } %></td>
  </tr>
<% end %>
</table>

<br />

<% if can? :create, Program %>
	<%= link_to 'New Program', new_program_path %>
<% end %>
