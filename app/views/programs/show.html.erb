<p id="notice"><%= notice %></p>

<h2>
  <%= @program.name %>
</h2>

<div class="program_institution_name">
	<%= link_to @institution.name, institution_path(@institution) %>
</div>
<div class="program_metrics clearfix">
	<ul class="program_general_stats">
		<li>2013 Program Tuition: <span>$56,000</span></li>
		<li><b>Graduating salary: </b>
		  <span>$<%= number_with_delimiter(@program.graduating_salary, :delimiter => ',') %></span></li>
		<li>Selectivity:  <span>Very Selective</span> </li>
		<li>Student : Faculty Ratio  <span>10 : 1</span></li>
	</ul>
	<ul class="program_rating_stats">
		<li><span id="overall_rating">Overall Rating</span><div class="star_rating_yellow"></div></li>
		<li>Personal Value
		  <div class="star_rating_red"></div></li>
		<li>Academics <div class="star_rating_blue"></div> </li>
		<li>Jobs &amp; Internships <div class="star_rating_green"></div></li>
	</ul>
</div>
	<div class="program_gallery">
		<img src="../assets/cmu.png" alt="Program photo"/>
	</div>


<%= link_to 'Edit', edit_program_path(@program) %> |
<%= link_to 'Back', programs_path %>
