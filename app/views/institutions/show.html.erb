
<h1>
  <%= @institution.name %>
</h1>

<p>
  <b>Address:</b>
  <%= @institution.address %>, <%= @institution.city %>, <%= @institution.state %>, <%= @institution.zip %>
</p>

<h3>Programs at <%= @institution.name %>: </h3>

<table class="table">
  <tr>
    <th>Name</th>
    <th>Graduating Salary</th>
  </tr>

<% @programs.each do |program| %>
  <tr>
    <td><%= link_to program.name, program %></td> 
    <td><%= "$#{program.graduating_salary}" %></td>
  </tr>
<% end %>
</table>


<%= link_to 'Edit', edit_institution_path(@institution) %> |
<%= link_to 'Back', institutions_path %>
