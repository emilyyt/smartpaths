<h1>Listing institutions</h1>

<table class="table">
  <tr>
    <th>Name</th>
    <th>Address</th>
    <th>City</th>
    <th>State</th>
    <th>Zip</th>
    <th>Edit</th>
    <th>Destroy</th>
  </tr>

<% @institutions.each do |institution| %>
  <tr>
    <td><%= link_to institution.name, institution %></td>
    <td><%= institution.address %></td>
    <td><%= institution.city %></td>
    <td><%= institution.state %></td>
    <td><%= institution.zip %></td>
    <td><%= link_to 'Edit', edit_institution_path(institution) %></td>
    <td><%= link_to 'Destroy', institution, method: :delete, data: { confirm: 'Are you sure?' } %></td>
  </tr>
<% end %>
</table>

<br />

<% if can? :create, Institution %>
	<%= link_to 'New Institution', new_institution_path %>
<% end %>